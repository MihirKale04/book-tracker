<% 
const title = "Edit: " + escapeHtml(book.title);
const errorsObj = errors || {};
const generalError = errorsObj.general ? `<p class="error">${escapeHtml(errorsObj.general)}</p>` : "";
const titleError = errorsObj.title ? `<span class="error">${escapeHtml(errorsObj.title)}</span>` : "";
const authorError = errorsObj.author ? `<span class="error">${escapeHtml(errorsObj.author)}</span>` : "";
const ratingError = errorsObj.rating ? `<span class="error">${escapeHtml(errorsObj.rating)}</span>` : "";
%>
<%- include("../layout", { title, body: `
  <h2>Edit Book</h2>
  
  ${generalError}
  
  <form method="post" action="/books/${book.id}">
    <div>
      <label for="title">Title *</label>
      <input 
        type="text" 
        id="title" 
        name="title" 
        value="${escapeHtml(book.title || "")}" 
        placeholder="Enter book title"
        required
        ${errorsObj.title ? `aria-invalid="true"` : ""}
      />
      ${titleError}
    </div>
    
    <div>
      <label for="author">Author *</label>
      <input 
        type="text" 
        id="author" 
        name="author" 
        value="${escapeHtml(book.author || "")}" 
        placeholder="Enter author name"
        required
        ${errorsObj.author ? `aria-invalid="true"` : ""}
      />
      ${authorError}
    </div>
    
    <div>
      <label for="status">Status</label>
      <select id="status" name="status">
        <option value="to-read" ${book.status === "to-read" ? "selected" : ""}>ðŸ“š To Read</option>
        <option value="reading" ${book.status === "reading" ? "selected" : ""}>ðŸ“– Reading</option>
        <option value="read" ${book.status === "read" ? "selected" : ""}>âœ… Read</option>
      </select>
    </div>
    
    <div>
      <label for="rating">Rating (1-5)</label>
      <input 
        type="number" 
        id="rating" 
        name="rating" 
        min="1" 
        max="5" 
        value="${book.rating || ""}"
        placeholder="Optional: 1-5"
        ${errorsObj.rating ? `aria-invalid="true"` : ""}
      />
      ${ratingError}
    </div>
    
    <div class="row">
      <button type="submit">ðŸ’¾ Update Book</button>
      <a href="/books/${book.id}" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
` }) %>

